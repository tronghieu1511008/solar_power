    </script>
    <!-- hide/show chart V,A,P -->
    <script>
        $(document).ready(function () {
            $(window).on("load", function () {
                $("#voltage_3").fadeOut();
                $("#ampe_3").fadeOut();
                $("#power_3").fadeOut();
            });
            // 
            $("#voltageBtn_3").click(function () {
                $("#labelPower_3").text("Voltage");
                $("#voltage_3").show(1000);
                $("#ampe_3").hide(1000);
                $("#power_3").hide(1000);
            });
            //
            $("#ampeBtn_3").click(function () {
                $("#labelPower_3").text("Current");
                $("#ampe_3").show(1000);
                $("#voltage_3").hide(1000);
                $("#power_3").hide(1000);
            });
            // 
            $("#powerBtn_3").click(function () {
                $("#labelPower_3").text("Power");
                $("#power_3").show(1000);
                $("#voltage_3").hide(1000);
                $("#ampe_3").hide(1000);
            });
            //  
        });

    </script>
    <!-- show/hide V-A-P -->
    <script>
        var toggle = function (funcA, funcB) {
            var flag = true;
            return function () {
                if (flag) {
                    funcA();
                } else {
                    funcB();
                }
                flag = !flag;
            };
        };
        // 
        $('#showAllBtn_3').click(toggle(function () {
            $("#labelPower_3").text("Vontage-Current-Power");
            $("#voltage_3").show(1000);
            $("#ampe_3").show(1000);
            $("#power_3").show(1000);
        }, function () {
            $("#labelPower_3").text("");
            $("#voltage_3").fadeOut();
            $("#ampe_3").fadeOut();
            $("#power_3").fadeOut();
        }));
    </script>
